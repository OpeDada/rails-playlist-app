<div class="buttons">
  <%= link_to 'Back', lists_path, class: 'btn btn-gradient'%>
  <%= link_to 'Add to Playlist', new_list_bookmark_path(@list), class: 'btn btn-gradient' %>
</div>
<div class="list-card-container">
  <div class="main-list-card">
    <% if @list.photo.attached? %>
      <div class="card-category-two" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>')">
        <h4><%= @list.name %></h4>
      </div>
    <% end %>
  </div>
  <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 mx-1">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="list-cards">
        <%= image_tag bookmark.song.poster_url, width: '150x300', class: 'image' %>
        <div class="card-bookmark-infos">
          <h2>Title: <%= bookmark.song.title %></h2>
          <%# <%= bookmark.movie.overview %>
          <p>Artist: <%= bookmark.song.artist %></p>
          <p>Comment: <%= bookmark.comment %></p>
          <div class="delete">
            <%= link_to 'ðŸ—‘', bookmark_path(bookmark), method: :delete, data: { confirm: 'Delete Song details?' }, class: "delete"  %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
